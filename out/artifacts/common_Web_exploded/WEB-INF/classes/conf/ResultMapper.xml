<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.dao.ResultMapper">

    <resultMap id="ResultMap" type="com.xn.autotest.bean.result.entity.Result">
        <result property="id" column="id"/>
        <result property="planName" column="plan_name"/>
        <result property="systemName" column="system_name"/>
        <result property="interfaceName" column="interface_name"/>
        <result property="result" column="result"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, plan_name, system_name, interface_name, result
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@isNotEmpty(planName)">
                AND plan_name = #{planName}
            </if>
           <if test="@isNotEmpty(systemName)">
                AND system_name = #{systemName}
            </if>
           <if test="@isNotEmpty(interfaceName)">
                AND interface_name = #{interfaceName}
            </if>
           <if test="@isNotEmpty(result)">
                AND result = #{result}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="ResultMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                result
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="ResultMap">
        SELECT
            <include refid="columns" />
        FROM
            result 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                result
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO result (
                id,
                plan_name,
                system_name,
                interface_name,
                result
            ) VALUES (
                #{id},
                #{planName},
                #{systemName},
                #{interfaceName},
                #{result}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO result (
                id,
                plan_name,
                system_name,
                interface_name,
                result
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.planName},#{item.systemName},#{item.interfaceName},#{item.result})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                result
            <set>
                <if test="planName != null">
                	<![CDATA[ plan_name = #{planName} ]]>,
                </if>
                <if test="systemName != null">
                	<![CDATA[ system_name = #{systemName} ]]>,
                </if>
                <if test="interfaceName != null">
                	<![CDATA[ interface_name = #{interfaceName} ]]>,
                </if>
                <if test="result != null">
                	<![CDATA[ result = #{result} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                result
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                result
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                result
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

