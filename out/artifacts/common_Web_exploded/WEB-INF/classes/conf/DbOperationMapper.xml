<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.dao.DbOperationMapper">

    <resultMap id="DbOperationMap" type="com.xn.autotest.bean.operation.dbOperation.entity.DbOperation">
        <result property="id" column="id"/>
        <result property="dbName" column="db_name"/>
        <result property="caseId" column="case_id"/>
        <result property="dbStatus" column="db_status"/>
        <result property="type" column="type"/>
        <result property="operationOrder" column="operation_order"/>
        <result property="sqlString" column="sql_string"/>
        <result property="changeTime" column="change_time"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, db_name, case_id, db_status, type, operation_order, sql_string, change_time
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@isNotEmpty(dbName)">
                AND db_name = #{dbName}
            </if>
           <if test="@isNotEmpty(caseId)">
                AND case_id = #{caseId}
            </if>
           <if test="@isNotEmpty(dbStatus)">
                AND db_status = #{dbStatus}
            </if>
           <if test="@isNotEmpty(type)">
                AND type = #{type}
            </if>
           <if test="@isNotEmpty(operationOrder)">
                AND operation_order = #{operationOrder}
            </if>
           <if test="@isNotEmpty(sqlString)">
                AND sql_string = #{sqlString}
            </if>
           <if test="@isNotEmpty(changeTimeBegin)">
                AND change_time >= #{changeTimeBegin}
           </if>
           <if test="@isNotEmpty(changeTimeEnd)">
                AND change_time &lt;= #{changeTimeEnd}
           </if>
        </where>
    </sql>
    
    <select id="get" resultMap="DbOperationMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                db_operation
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="DbOperationMap">
        SELECT
            <include refid="columns" />
        FROM
            db_operation 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                db_operation
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO db_operation (
                id,
                db_name,
                case_id,
                db_status,
                type,
                operation_order,
                sql_string,
                change_time
            ) VALUES (
                #{id},
                #{dbName},
                #{caseId},
                #{dbStatus},
                #{type},
                #{operationOrder},
                #{sqlString},
                #{changeTime}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO db_operation (
                id,
                db_name,
                case_id,
                db_status,
                type,
                operation_order,
                sql_string,
                change_time
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.dbName},#{item.caseId},#{item.dbStatus},#{item.type},#{item.operationOrder},#{item.sqlString},#{item.changeTime})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                db_operation
            <set>
                <if test="dbName != null">
                	<![CDATA[ db_name = #{dbName} ]]>,
                </if>
                <if test="caseId != null">
                	<![CDATA[ case_id = #{caseId} ]]>,
                </if>
                <if test="dbStatus != null">
                	<![CDATA[ db_status = #{dbStatus} ]]>,
                </if>
                <if test="type != null">
                	<![CDATA[ type = #{type} ]]>,
                </if>
                <if test="operationOrder != null">
                	<![CDATA[ operation_order = #{operationOrder} ]]>,
                </if>
                <if test="sqlString != null">
                	<![CDATA[ sql_string = #{sqlString} ]]>,
                </if>
                <if test="changeTime != null">
                	<![CDATA[ change_time = #{changeTime} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                db_operation
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                db_operation
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                db_operation
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

