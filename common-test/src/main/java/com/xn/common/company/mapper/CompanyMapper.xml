<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xn.common.company.dao.CompanyMapper">

    <resultMap id="CompanyMap" type="com.xn.common.company.entity.Company">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, name
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="name != null">
                AND name = #{name}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="CompanyMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                company
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="CompanyMap">
        SELECT
            <include refid="columns" />
        FROM
            company 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                company
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO company (
                id,
                name
            ) VALUES (
                #{id},
                #{name}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO company (
                id,
                name
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.name})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                company
            <set>
                <if test="name != null">
                	<![CDATA[ name = #{name} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                company
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                company
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                company
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

