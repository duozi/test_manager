<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.dao.DbAssertMapper">

    <resultMap id="DbAssertMap" type="com.xn.autotest.bean.assertBean.dbAssert.entity.DbAssert">
        <result property="id" column="id"/>
        <result property="caseId" column="case_id"/>
        <result property="parameterAssertStatus" column="parameter_assert_status"/>
        <result property="dbName" column="db_name"/>
        <result property="sqlString" column="sql_string"/>
        <result property="dbAssertContent" column="db_assert_content"/>
        <result property="changeTime" column="change_time"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, case_id, parameter_assert_status, db_name, sql_string, db_assert_content, change_time
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@isNotEmpty(caseId)">
                AND case_id = #{caseId}
            </if>
           <if test="@isNotEmpty(parameterAssertStatus)">
                AND parameter_assert_status = #{parameterAssertStatus}
            </if>
           <if test="@isNotEmpty(dbName)">
                AND db_name = #{dbName}
            </if>
           <if test="@isNotEmpty(sqlString)">
                AND sql_string = #{sqlString}
            </if>
           <if test="@isNotEmpty(dbAssertContent)">
                AND db_assert_content = #{dbAssertContent}
            </if>
           <if test="@isNotEmpty(changeTimeBegin)">
                AND change_time >= #{changeTimeBegin}
           </if>
           <if test="@isNotEmpty(changeTimeEnd)">
                AND change_time &lt;= #{changeTimeEnd}
           </if>
        </where>
    </sql>
    
    <select id="get" resultMap="DbAssertMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                db_assert
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="DbAssertMap">
        SELECT
            <include refid="columns" />
        FROM
            db_assert 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                db_assert
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO db_assert (
                id,
                case_id,
                parameter_assert_status,
                db_name,
                sql_string,
                db_assert_content,
                change_time
            ) VALUES (
                #{id},
                #{caseId},
                #{parameterAssertStatus},
                #{dbName},
                #{sqlString},
                #{dbAssertContent},
                #{changeTime}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO db_assert (
                id,
                case_id,
                parameter_assert_status,
                db_name,
                sql_string,
                db_assert_content,
                change_time
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.caseId},#{item.parameterAssertStatus},#{item.dbName},#{item.sqlString},#{item.dbAssertContent},#{item.changeTime})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                db_assert
            <set>
                <if test="caseId != null">
                	<![CDATA[ case_id = #{caseId} ]]>,
                </if>
                <if test="parameterAssertStatus != null">
                	<![CDATA[ parameter_assert_status = #{parameterAssertStatus} ]]>,
                </if>
                <if test="dbName != null">
                	<![CDATA[ db_name = #{dbName} ]]>,
                </if>
                <if test="sqlString != null">
                	<![CDATA[ sql_string = #{sqlString} ]]>,
                </if>
                <if test="dbAssertContent != null">
                	<![CDATA[ db_assert_content = #{dbAssertContent} ]]>,
                </if>
                <if test="changeTime != null">
                	<![CDATA[ change_time = #{changeTime} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                db_assert
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                db_assert
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                db_assert
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

