<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.xn.interfacetest.dao.TestResultMapper">

    <resultMap id="TestResultMap" type="com.xn.interfacetest.entity.TestResult">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="caseIds" column="case_ids"/>
        <result property="systemId" column="system_id"/>
        <result property="planId" column="plan_id"/>
        <result property="interfaceIds" column="interface_ids"/>
        <result property="caseCount" column="case_count"/>
        <result property="passCaseCount" column="pass_case_count"/>
        <result property="failCaseCout" column="fail_case_cout"/>
        <result property="errorCaseCout" column="error_case_cout"/>
        <result property="result" column="result"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, name, case_ids, system_id, plan_id, interface_ids, case_count, pass_case_count, fail_case_cout, error_case_cout, result
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@isNotEmpty(name)">
                AND name = #{name}
            </if>
           <if test="@isNotEmpty(caseIds)">
                AND case_ids = #{caseIds}
            </if>
           <if test="@isNotEmpty(systemId)">
                AND system_id = #{systemId}
            </if>
           <if test="@isNotEmpty(planId)">
                AND plan_id = #{planId}
            </if>
           <if test="@isNotEmpty(interfaceIds)">
                AND interface_ids = #{interfaceIds}
            </if>
           <if test="@isNotEmpty(caseCount)">
                AND case_count = #{caseCount}
            </if>
           <if test="@isNotEmpty(passCaseCount)">
                AND pass_case_count = #{passCaseCount}
            </if>
           <if test="@isNotEmpty(failCaseCout)">
                AND fail_case_cout = #{failCaseCout}
            </if>
           <if test="@isNotEmpty(errorCaseCout)">
                AND error_case_cout = #{errorCaseCout}
            </if>
           <if test="@isNotEmpty(result)">
                AND result = #{result}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="TestResultMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                test_result
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="TestResultMap">
        SELECT
            <include refid="columns" />
        FROM
            test_result 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                test_result
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO test_result (
                id,
                name,
                case_ids,
                system_id,
                plan_id,
                interface_ids,
                case_count,
                pass_case_count,
                fail_case_cout,
                error_case_cout,
                result
            ) VALUES (
                #{id},
                #{name},
                #{caseIds},
                #{systemId},
                #{planId},
                #{interfaceIds},
                #{caseCount},
                #{passCaseCount},
                #{failCaseCout},
                #{errorCaseCout},
                #{result}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO test_result (
                id,
                name,
                case_ids,
                system_id,
                plan_id,
                interface_ids,
                case_count,
                pass_case_count,
                fail_case_cout,
                error_case_cout,
                result
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.name},#{item.caseIds},#{item.systemId},#{item.planId},#{item.interfaceIds},#{item.caseCount},#{item.passCaseCount},#{item.failCaseCout},#{item.errorCaseCout},#{item.result})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                test_result
            <set>
                <if test="name != null">
                	<![CDATA[ name = #{name} ]]>,
                </if>
                <if test="caseIds != null">
                	<![CDATA[ case_ids = #{caseIds} ]]>,
                </if>
                <if test="systemId != null">
                	<![CDATA[ system_id = #{systemId} ]]>,
                </if>
                <if test="planId != null">
                	<![CDATA[ plan_id = #{planId} ]]>,
                </if>
                <if test="interfaceIds != null">
                	<![CDATA[ interface_ids = #{interfaceIds} ]]>,
                </if>
                <if test="caseCount != null">
                	<![CDATA[ case_count = #{caseCount} ]]>,
                </if>
                <if test="passCaseCount != null">
                	<![CDATA[ pass_case_count = #{passCaseCount} ]]>,
                </if>
                <if test="failCaseCout != null">
                	<![CDATA[ fail_case_cout = #{failCaseCout} ]]>,
                </if>
                <if test="errorCaseCout != null">
                	<![CDATA[ error_case_cout = #{errorCaseCout} ]]>,
                </if>
                <if test="result != null">
                	<![CDATA[ result = #{result} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                test_result
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                test_result
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                test_result
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

