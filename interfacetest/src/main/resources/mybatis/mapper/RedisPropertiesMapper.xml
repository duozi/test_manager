<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.dao.RedisPropertiesMapper">

    <resultMap id="RedisPropertiesMap" type="com.xn.autotest.bean.properties.redisProperties.entity.RedisProperties">
        <result property="id" column="id"/>
        <result property="redisName" column="redis_name"/>
        <result property="planeId" column="plane_id"/>
        <result property="redisStatus" column="redis_status"/>
        <result property="redisHostPort" column="redis_host_port"/>
        <result property="timeout" column="timeout"/>
        <result property="redirections" column="redirections"/>
        <result property="changeTime" column="change_time"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, redis_name, plane_id, redis_status, redis_host_port, timeout, redirections, change_time
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@isNotEmpty(redisName)">
                AND redis_name = #{redisName}
            </if>
           <if test="@isNotEmpty(planeId)">
                AND plane_id = #{planeId}
            </if>
           <if test="@isNotEmpty(redisStatus)">
                AND redis_status = #{redisStatus}
            </if>
           <if test="@isNotEmpty(redisHostPort)">
                AND redis_host_port = #{redisHostPort}
            </if>
           <if test="@isNotEmpty(timeout)">
                AND timeout = #{timeout}
            </if>
           <if test="@isNotEmpty(redirections)">
                AND redirections = #{redirections}
            </if>
           <if test="@isNotEmpty(changeTimeBegin)">
                AND change_time >= #{changeTimeBegin}
           </if>
           <if test="@isNotEmpty(changeTimeEnd)">
                AND change_time &lt;= #{changeTimeEnd}
           </if>
        </where>
    </sql>
    
    <select id="get" resultMap="RedisPropertiesMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                redis_properties
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="RedisPropertiesMap">
        SELECT
            <include refid="columns" />
        FROM
            redis_properties 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                redis_properties
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO redis_properties (
                id,
                redis_name,
                plane_id,
                redis_status,
                redis_host_port,
                timeout,
                redirections,
                change_time
            ) VALUES (
                #{id},
                #{redisName},
                #{planeId},
                #{redisStatus},
                #{redisHostPort},
                #{timeout},
                #{redirections},
                #{changeTime}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO redis_properties (
                id,
                redis_name,
                plane_id,
                redis_status,
                redis_host_port,
                timeout,
                redirections,
                change_time
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.redisName},#{item.planeId},#{item.redisStatus},#{item.redisHostPort},#{item.timeout},#{item.redirections},#{item.changeTime})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                redis_properties
            <set>
                <if test="redisName != null">
                	<![CDATA[ redis_name = #{redisName} ]]>,
                </if>
                <if test="planeId != null">
                	<![CDATA[ plane_id = #{planeId} ]]>,
                </if>
                <if test="redisStatus != null">
                	<![CDATA[ redis_status = #{redisStatus} ]]>,
                </if>
                <if test="redisHostPort != null">
                	<![CDATA[ redis_host_port = #{redisHostPort} ]]>,
                </if>
                <if test="timeout != null">
                	<![CDATA[ timeout = #{timeout} ]]>,
                </if>
                <if test="redirections != null">
                	<![CDATA[ redirections = #{redirections} ]]>,
                </if>
                <if test="changeTime != null">
                	<![CDATA[ change_time = #{changeTime} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                redis_properties
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                redis_properties
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                redis_properties
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

