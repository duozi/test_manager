<mapper namespace="com.xn.interfacetest.dao.RelationCaseRedisMapper">

    <resultMap id="RelationCaseRedisMap" type="com.xn.interfacetest.entity.RelationCaseRedis">
        <result property="id" column="id"/>
        <result property="caseId" column="case_id"/>
        <result property="redisId" column="redis_id"/>
        <result property="operateType" column="operate_type"/>
        <result property="redisOperateType" column="redis_operate_type"/>
        <result property="key" column="t_key"/>
        <result property="value" column="t_value"/>
        <result property="time" column="t_time"/>
        <result property="interfaceId" column="interface_id"/>
        <result property="type" column="t_type"/>
    </resultMap>

    <sql id="columns">
        <![CDATA[
        id, case_id, redis_id, operate_type, redis_operate_type, t_key, t_value, t_time, interface_id, t_type
        ]]>
    </sql>

    <sql id="where">
        <where>
            <if test="@Ognl@isNotEmpty(id)">
                AND id = #{id}
            </if>
            <if test="@Ognl@isNotEmpty(caseId)">
                AND case_id = #{caseId}
            </if>
            <if test="@Ognl@isNotEmpty(redisId)">
                AND redis_id = #{redisId}
            </if>
            <if test="@Ognl@isNotEmpty(operateType)">
                AND operate_type = #{operateType}
            </if>
            <if test="@Ognl@isNotEmpty(redisOperateType)">
                AND redis_operate_type = #{redisOperateType}
            </if>
            <if test="@Ognl@isNotEmpty(key)">
                AND t_key = #{key}
            </if>
            <if test="@Ognl@isNotEmpty(value)">
                AND t_value = #{value}
            </if>
            <if test="@Ognl@isNotEmpty(time)">
                AND t_time = #{time}
            </if>
            <if test="@Ognl@isNotEmpty(interfaceId)">
                AND interface_id = #{interfaceId}
            </if>
            <if test="@Ognl@isNotEmpty(type)">
                AND t_type = #{type}
            </if>
        </where>
    </sql>

    <select id="get" resultMap="RelationCaseRedisMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                relation_case_redis
            WHERE
                id = #{id}
        ]]>
    </select>

    <select id="list" resultMap="RelationCaseRedisMap">
        SELECT
        <include refid="columns" />
        FROM
        relation_case_redis
        <include refid="where"/>
    </select>

    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                relation_case_redis
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO relation_case_redis (
                id,
                case_id,
                redis_id,
                operate_type,
                redis_operate_type,
                t_key,
                t_value,
                t_time,
                interface_id,
                t_type
            ) VALUES (
                #{id},
                #{caseId},
                #{redisId},
                #{operateType},
                #{redisOperateType},
                #{key},
                #{value},
                #{time},
                #{interfaceId},
                #{type}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO relation_case_redis (
                id,
                case_id,
                redis_id,
                operate_type,
                redis_operate_type,
                t_key,
                t_value,
                t_time,
                interface_id,
                t_type
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.caseId},#{item.redisId},#{item.operateType},#{item.redisOperateType},#{item.key},#{item.value},#{item.time},#{item.interfaceId},#{item.type})
        </foreach>
    </insert>

    <update id="update">
        UPDATE
        relation_case_redis
        <set>
            <if test="caseId != null">
                <![CDATA[ case_id = #{caseId} ]]>,
            </if>
            <if test="redisId != null">
                <![CDATA[ redis_id = #{redisId} ]]>,
            </if>
            <if test="operateType != null">
                <![CDATA[ operate_type = #{operateType} ]]>,
            </if>
            <if test="redisOperateType != null">
                <![CDATA[ redis_operate_type = #{redisOperateType} ]]>,
            </if>
            <if test="key != null">
                <![CDATA[ t_key = #{key} ]]>,
            </if>
            <if test="value != null">
                <![CDATA[ t_value = #{value} ]]>,
            </if>
            <if test="time != null">
                <![CDATA[ t_time = #{time} ]]>,
            </if>
            <if test="interfaceId != null">
                <![CDATA[ interface_id = #{interfaceId} ]]>,
            </if>
            <if test="type != null">
                <![CDATA[ t_type = #{type} ]]>
            </if>
        </set>
        WHERE
        id = #{id}
    </update>

    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                relation_case_redis
            WHERE
                id = #{id} 
        ]]>
    </delete>

    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                relation_case_redis
        ]]>
        <include refid="where"/>
    </delete>

