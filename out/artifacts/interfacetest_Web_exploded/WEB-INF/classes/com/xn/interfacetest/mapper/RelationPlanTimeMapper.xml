<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.xn.interfacetest.dao.RelationPlanTimeMapper">

    <resultMap id="RelationPlanTimeMap" type="com.xn.interfacetest.entity.RelationPlanTime">
        <result property="id" column="id"/>
        <result property="planId" column="plan_id"/>
        <result property="timeConfigId" column="time_config_id"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, plan_id, time_config_id
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@isNotEmpty(planId)">
                AND plan_id = #{planId}
            </if>
           <if test="@isNotEmpty(timeConfigId)">
                AND time_config_id = #{timeConfigId}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="RelationPlanTimeMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                relation_plan_time
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="RelationPlanTimeMap">
        SELECT
            <include refid="columns" />
        FROM
            relation_plan_time 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                relation_plan_time
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO relation_plan_time (
                id,
                plan_id,
                time_config_id
            ) VALUES (
                #{id},
                #{planId},
                #{timeConfigId}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO relation_plan_time (
                id,
                plan_id,
                time_config_id
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.planId},#{item.timeConfigId})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                relation_plan_time
            <set>
                <if test="planId != null">
                	<![CDATA[ plan_id = #{planId} ]]>,
                </if>
                <if test="timeConfigId != null">
                	<![CDATA[ time_config_id = #{timeConfigId} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                relation_plan_time
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                relation_plan_time
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                relation_plan_time
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

