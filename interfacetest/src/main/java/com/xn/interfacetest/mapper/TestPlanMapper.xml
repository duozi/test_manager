<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xn.interfacetest.dao.TestPlanMapper">

    <resultMap id="TestPlanMap" type="com.xn.interfacetest.entity.TestPlan">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="status" column="status"/>
        <result property="excuteType" column="excute_type"/>
        <result property="createPerson" column="create_person"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, name, description, status, excute_type, create_person
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@Ognl@isNotEmpty(name)">
                AND name = #{name}
            </if>
           <if test="@Ognl@isNotEmpty(description)">
                AND description = #{description}
            </if>
           <if test="@Ognl@isNotEmpty(status)">
                AND status = #{status}
            </if>
           <if test="@Ognl@isNotEmpty(excuteType)">
                AND excute_type = #{excuteType}
            </if>
           <if test="@Ognl@isNotEmpty(createPerson)">
                AND create_person = #{createPerson}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="TestPlanMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                test_plan
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="TestPlanMap">
        SELECT
            <include refid="columns" />
        FROM
            test_plan 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                test_plan
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO test_plan (
                id,
                name,
                description,
                status,
                excute_type,
                create_person
            ) VALUES (
                #{id},
                #{name},
                #{description},
                #{status},
                #{excuteType},
                #{createPerson}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO test_plan (
                id,
                name,
                description,
                status,
                excute_type,
                create_person
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.name},#{item.description},#{item.status},#{item.excuteType},#{item.createPerson})
        </foreach>
    </insert>

    <update id="updateStatus">
        update
        test_plan
        set status = #{status}
        where id = #{id}
    </update>

    <update id="update">
        	UPDATE
                test_plan
            <set>
                <if test="name != null">
                	<![CDATA[ name = #{name} ]]>,
                </if>
                <if test="description != null">
                	<![CDATA[ description = #{description} ]]>,
                </if>
                <if test="status != null">
                	<![CDATA[ status = #{status} ]]>,
                </if>
                <if test="excuteType != null">
                	<![CDATA[ excute_type = #{excuteType} ]]>,
                </if>
                <if test="createPerson != null">
                	<![CDATA[ create_person = #{createPerson} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                test_plan
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                test_plan
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                test_plan
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

