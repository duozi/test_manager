<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.xn.interfacetest.dao.TestServiceMapper">

    <resultMap id="TestServiceMap" type="com.xn.interfacetest.entity.TestService">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="systemId" column="system_id"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, name, description, system_id
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="null != name">
                AND name = #{name}
            </if>
           <if test="null != description">
                AND description = #{description}
            </if>
           <if test="null != systemId">
                AND system_id = #{systemId}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="TestServiceMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                test_service
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="TestServiceMap">
        SELECT
            <include refid="columns" />
        FROM
            test_service 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                test_service
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO test_service (
                id,
                name,
                description,
                system_id
            ) VALUES (
                #{id},
                #{name},
                #{description},
                #{systemId}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO test_service (
                id,
                name,
                description,
                system_id
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.name},#{item.description},#{item.systemId})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                test_service
            <set>
                <if test="name != null">
                	<![CDATA[ name = #{name} ]]>,
                </if>
                <if test="description != null">
                	<![CDATA[ description = #{description} ]]>,
                </if>
                <if test="systemId != null">
                	<![CDATA[ system_id = #{systemId} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                test_service
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                test_service
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                test_service
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

