<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.bean.interface.dao.InterfaceMapper">

    <resultMap id="InterfaceMap" type="com.xn.autotest.bean.interface.entity.Interface">
        <result property="id" column="id"/>
        <result property="systemId" column="system_id"/>
        <result property="interfaceName" column="interface_name"/>
        <result property="interfaceType" column="interface_type"/>
        <result property="interfaceStatus" column="interface_status"/>
        <result property="changeTime" column="change_time"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, system_id, interface_name, interface_type, interface_status, change_time
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="@Ognl@isNotEmpty(id)">
                AND id = #{id}
            </if>
           <if test="@Ognl@isNotEmpty(systemId)">
                AND system_id = #{systemId}
            </if>
           <if test="@Ognl@isNotEmpty(interfaceName)">
                AND interface_name = #{interfaceName}
            </if>
           <if test="@Ognl@isNotEmpty(interfaceType)">
                AND interface_type = #{interfaceType}
            </if>
           <if test="@Ognl@isNotEmpty(interfaceStatus)">
                AND interface_status = #{interfaceStatus}
            </if>
           <if test="@Ognl@isNotEmpty(changeTimeBegin)">
                AND change_time >= #{changeTimeBegin}
           </if>
           <if test="@Ognl@isNotEmpty(changeTimeEnd)">
                AND change_time &lt;= #{changeTimeEnd}
           </if>
        </where>
    </sql>
    
    <select id="get" resultMap="InterfaceMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                interface
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="InterfaceMap">
        SELECT
            <include refid="columns" />
        FROM
            interface 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                interface
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO interface (
                id,
                system_id,
                interface_name,
                interface_type,
                interface_status,
                change_time
            ) VALUES (
                #{id},
                #{systemId},
                #{interfaceName},
                #{interfaceType},
                #{interfaceStatus},
                #{changeTime}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO interface (
                id,
                system_id,
                interface_name,
                interface_type,
                interface_status,
                change_time
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.systemId},#{item.interfaceName},#{item.interfaceType},#{item.interfaceStatus},#{item.changeTime})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                interface
            <set>
                <if test="systemId != null">
                	<![CDATA[ system_id = #{systemId} ]]>,
                </if>
                <if test="interfaceName != null">
                	<![CDATA[ interface_name = #{interfaceName} ]]>,
                </if>
                <if test="interfaceType != null">
                	<![CDATA[ interface_type = #{interfaceType} ]]>,
                </if>
                <if test="interfaceStatus != null">
                	<![CDATA[ interface_status = #{interfaceStatus} ]]>,
                </if>
                <if test="changeTime != null">
                	<![CDATA[ change_time = #{changeTime} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                interface
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                interface
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                interface
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

