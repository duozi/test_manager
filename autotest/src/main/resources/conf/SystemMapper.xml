<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.dao.SystemMapper">

    <resultMap id="SystemMap" type="com.xn.autotest.bean.request.system.entity.System">
        <result property="id" column="id"/>
        <result property="planId" column="plan_id"/>
        <result property="systemName" column="system_name"/>
        <result property="type" column="type"/>
        <result property="systemStatus" column="system_status"/>
        <result property="changeTime" column="change_time"/>
        <result property="jarStatus" column="jar_status"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, plan_id, system_name, type, system_status, change_time, jar_status
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="@Ognl@isNotEmpty(id)">
                AND id = #{id}
            </if>
           <if test="@Ognl@isNotEmpty(planId)">
                AND plan_id = #{planId}
            </if>
           <if test="@Ognl@isNotEmpty(systemName)">
                AND system_name = #{systemName}
            </if>
           <if test="@Ognl@isNotEmpty(type)">
                AND type = #{type}
            </if>
           <if test="@Ognl@isNotEmpty(systemStatus)">
                AND system_status = #{systemStatus}
            </if>
           <if test="@Ognl@isNotEmpty(changeTimeBegin)">
                AND change_time >= #{changeTimeBegin}
           </if>
           <if test="@Ognl@isNotEmpty(changeTimeEnd)">
                AND change_time &lt;= #{changeTimeEnd}
           </if>
           <if test="@Ognl@isNotEmpty(jarStatus)">
                AND jar_status = #{jarStatus}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="SystemMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                system
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="SystemMap">
        SELECT
            <include refid="columns" />
        FROM
            system 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                system
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO system (
                id,
                plan_id,
                system_name,
                type,
                system_status,
                change_time,
                jar_status
            ) VALUES (
                #{id},
                #{planId},
                #{systemName},
                #{type},
                #{systemStatus},
                #{changeTime},
                #{jarStatus}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO system (
                id,
                plan_id,
                system_name,
                type,
                system_status,
                change_time,
                jar_status
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.planId},#{item.systemName},#{item.type},#{item.systemStatus},#{item.changeTime},#{item.jarStatus})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                system
            <set>
                <if test="planId != null">
                	<![CDATA[ plan_id = #{planId} ]]>,
                </if>
                <if test="systemName != null">
                	<![CDATA[ system_name = #{systemName} ]]>,
                </if>
                <if test="type != null">
                	<![CDATA[ type = #{type} ]]>,
                </if>
                <if test="systemStatus != null">
                	<![CDATA[ system_status = #{systemStatus} ]]>,
                </if>
                <if test="changeTime != null">
                	<![CDATA[ change_time = #{changeTime} ]]>,
                </if>
                <if test="jarStatus != null">
                	<![CDATA[ jar_status = #{jarStatus} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                system
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                system
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                system
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

