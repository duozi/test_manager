<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xn.autotest.dao.DBPropertiesDao">
	
	
	
 	<sql id="dbProperties">
		db_name as dbName,
		url as  url,
		user_name as userName,
		pwd as pwd,
		db_driver as dbDriver
	</sql> 


	<select id="getAllDBProperties" resultType="DBProperties">
		select  <include refid="dbProperties" />  from db_properties where db_status=1
	</select>

	<select id="getDBByName" parameterType="string" resultType="DBProperties">
		select <include refid="dbProperties"/> from db_properties where db_name=#{dbName} and db_status=1
	</select>


</mapper>