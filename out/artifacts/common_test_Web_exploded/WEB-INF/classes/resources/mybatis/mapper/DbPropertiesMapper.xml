<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.dao.DbPropertiesMapper">

    <resultMap id="DbPropertiesMap" type="com.xn.autotest.bean.properties.dbProperties.entity.DbProperties">
        <result property="id" column="id"/>
        <result property="dbName" column="db_name"/>
        <result property="planeId" column="plane_id"/>
        <result property="dbStatus" column="db_status"/>
        <result property="url" column="url"/>
        <result property="userName" column="user_name"/>
        <result property="pwd" column="pwd"/>
        <result property="changeTime" column="change_time"/>
        <result property="dbDriver" column="db_driver"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, db_name, plane_id, db_status, url, user_name, pwd, change_time, db_driver
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@isNotEmpty(dbName)">
                AND db_name = #{dbName}
            </if>
           <if test="@isNotEmpty(planeId)">
                AND plane_id = #{planeId}
            </if>
           <if test="@isNotEmpty(dbStatus)">
                AND db_status = #{dbStatus}
            </if>
           <if test="@isNotEmpty(url)">
                AND url = #{url}
            </if>
           <if test="@isNotEmpty(userName)">
                AND user_name = #{userName}
            </if>
           <if test="@isNotEmpty(pwd)">
                AND pwd = #{pwd}
            </if>
           <!--<if test="@isNotEmpty(changeTimeBegin)">-->
                <!--AND change_time >= #{changeTimeBegin}-->
           <!--</if>-->
           <!--<if test="@isNotEmpty(changeTimeEnd)">-->
                <!--AND change_time &lt;= #{changeTimeEnd}-->
           <!--</if>-->
           <if test="@isNotEmpty(dbDriver)">
                AND db_driver = #{dbDriver}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="DbPropertiesMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                db_properties
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="DbPropertiesMap">
        SELECT
            <include refid="columns" />
        FROM
            db_properties 
        <include refid="where"/>
    </select>

    <select id="listAll" resultMap="DbPropertiesMap">
        SELECT
        <include refid="columns" />
        FROM
        db_properties

    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                db_properties
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO db_properties (
                id,
                db_name,
                plane_id,
                db_status,
                url,
                user_name,
                pwd,
                change_time,
                db_driver
            ) VALUES (
                #{id},
                #{dbName},
                #{planeId},
                #{dbStatus},
                #{url},
                #{userName},
                #{pwd},
                #{changeTime},
                #{dbDriver}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO db_properties (
                id,
                db_name,
                plane_id,
                db_status,
                url,
                user_name,
                pwd,
                change_time,
                db_driver
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.dbName},#{item.planeId},#{item.dbStatus},#{item.url},#{item.userName},#{item.pwd},#{item.changeTime},#{item.dbDriver})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                db_properties
            <set>
                <if test="dbName != null">
                	<![CDATA[ db_name = #{dbName} ]]>,
                </if>
                <if test="planeId != null">
                	<![CDATA[ plane_id = #{planeId} ]]>,
                </if>
                <if test="dbStatus != null">
                	<![CDATA[ db_status = #{dbStatus} ]]>,
                </if>
                <if test="url != null">
                	<![CDATA[ url = #{url} ]]>,
                </if>
                <if test="userName != null">
                	<![CDATA[ user_name = #{userName} ]]>,
                </if>
                <if test="pwd != null">
                	<![CDATA[ pwd = #{pwd} ]]>,
                </if>
                <if test="changeTime != null">
                	<![CDATA[ change_time = #{changeTime} ]]>,
                </if>
                <if test="dbDriver != null">
                	<![CDATA[ db_driver = #{dbDriver} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                db_properties
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                db_properties
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                db_properties
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

