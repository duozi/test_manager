<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.xn.interfacetest.dao.RelationCaseDatabaseMapper">

    <resultMap id="RelationCaseDatabaseMap" type="com.xn.interfacetest.entity.RelationCaseDatabase">
        <result property="id" column="id"/>
        <result property="caseId" column="case_id"/>
        <result property="databaseId" column="database_id"/>
        <result property="operateType" column="operate_type"/>
        <result property="sqlStr" column="sql_str"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, case_id, database_id, operate_type, sql_str
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@isNotEmpty(caseId)">
                AND case_id = #{caseId}
            </if>
           <if test="@isNotEmpty(databaseId)">
                AND database_id = #{databaseId}
            </if>
           <if test="@isNotEmpty(operateType)">
                AND operate_type = #{operateType}
            </if>
           <if test="@isNotEmpty(sqlStr)">
                AND sql_str = #{sqlStr}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="RelationCaseDatabaseMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                relation_case_database
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="RelationCaseDatabaseMap">
        SELECT
            <include refid="columns" />
        FROM
            relation_case_database 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                relation_case_database
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO relation_case_database (
                id,
                case_id,
                database_id,
                operate_type,
                sql_str
            ) VALUES (
                #{id},
                #{caseId},
                #{databaseId},
                #{operateType},
                #{sqlStr}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO relation_case_database (
                id,
                case_id,
                database_id,
                operate_type,
                sql_str
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.caseId},#{item.databaseId},#{item.operateType},#{item.sqlStr})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                relation_case_database
            <set>
                <if test="caseId != null">
                	<![CDATA[ case_id = #{caseId} ]]>,
                </if>
                <if test="databaseId != null">
                	<![CDATA[ database_id = #{databaseId} ]]>,
                </if>
                <if test="operateType != null">
                	<![CDATA[ operate_type = #{operateType} ]]>,
                </if>
                <if test="sqlStr != null">
                	<![CDATA[ sql_str = #{sqlStr} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                relation_case_database
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                relation_case_database
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                relation_case_database
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

