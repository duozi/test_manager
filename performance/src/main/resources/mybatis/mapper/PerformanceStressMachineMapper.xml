            INSERT INTO performance_stress_machine (
                id,
                stress_machine_name,
                remark,
                company,
                department,
                psystem,
                ip,
                username,
                password,
                create_person,
                stress_machine_status,
                port
            ) VALUES (
                #{id},
                #{stressMachineName},
                #{remark},
                #{company},
                #{department},
                #{psystem},
                #{ip},
