<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xn.interfacetest.dao.RelationPlanSuitMapper">

    <resultMap id="RelationPlanSuitMap" type="com.xn.interfacetest.entity.RelationPlanSuit">
        <result property="id" column="id"/>
        <result property="planId" column="plan_id"/>
        <result property="suitId" column="suit_id"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, plan_id, suit_id
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@Ognl@isNotEmpty(planId)">
                AND plan_id = #{planId}
            </if>
           <if test="@Ognl@isNotEmpty(suitId)">
                AND suit_id = #{suitId}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="RelationPlanSuitMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                relation_plan_suit
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="RelationPlanSuitMap">
        SELECT
            <include refid="columns" />
        FROM
            relation_plan_suit 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                relation_plan_suit
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO relation_plan_suit (
                id,
                plan_id,
                suit_id
            ) VALUES (
                #{id},
                #{planId},
                #{suitId}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO relation_plan_suit (
                id,
                plan_id,
                suit_id
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.planId},#{item.suitId})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                relation_plan_suit
            <set>
                <if test="planId != null">
                	<![CDATA[ plan_id = #{planId} ]]>,
                </if>
                <if test="suitId != null">
                	<![CDATA[ suit_id = #{suitId} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                relation_plan_suit
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                relation_plan_suit
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                relation_plan_suit
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

