<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.dao.MethodMapper">

    <resultMap id="MethodMap" type="com.xn.autotest.bean.request.method.entity.Method">
        <result property="id" column="id"/>
        <result property="interfaceId" column="interface_id"/>
        <result property="methodName" column="method_name"/>
        <result property="methodStatus" column="method_status"/>
        <result property="changeTime" column="change_time"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, interface_id, method_name, method_status, change_time
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="@Ognl@isNotEmpty(id)">
                AND id = #{id}
            </if>
           <if test="@Ognl@isNotEmpty(interfaceId)">
                AND interface_id = #{interfaceId}
            </if>
           <if test="@Ognl@isNotEmpty(methodName)">
                AND method_name = #{methodName}
            </if>
           <if test="@Ognl@isNotEmpty(methodStatus)">
                AND method_status = #{methodStatus}
            </if>
           <if test="@Ognl@isNotEmpty(changeTimeBegin)">
                AND change_time >= #{changeTimeBegin}
           </if>
           <if test="@Ognl@isNotEmpty(changeTimeEnd)">
                AND change_time &lt;= #{changeTimeEnd}
           </if>
        </where>
    </sql>
    
    <select id="get" resultMap="MethodMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                method
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="MethodMap">
        SELECT
            <include refid="columns" />
        FROM
            method 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                method
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO method (
                id,
                interface_id,
                method_name,
                method_status,
                change_time
            ) VALUES (
                #{id},
                #{interfaceId},
                #{methodName},
                #{methodStatus},
                #{changeTime}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO method (
                id,
                interface_id,
                method_name,
                method_status,
                change_time
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.interfaceId},#{item.methodName},#{item.methodStatus},#{item.changeTime})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                method
            <set>
                <if test="interfaceId != null">
                	<![CDATA[ interface_id = #{interfaceId} ]]>,
                </if>
                <if test="methodName != null">
                	<![CDATA[ method_name = #{methodName} ]]>,
                </if>
                <if test="methodStatus != null">
                	<![CDATA[ method_status = #{methodStatus} ]]>,
                </if>
                <if test="changeTime != null">
                	<![CDATA[ change_time = #{changeTime} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                method
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                method
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                method
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

