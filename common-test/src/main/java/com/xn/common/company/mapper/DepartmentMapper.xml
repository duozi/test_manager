<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xn.common.company.dao.DepartmentMapper">

    <resultMap id="DepartmentMap" type="com.xn.common.company.entity.Department">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="companyId" column="company_id"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, name, company_id
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="null != name">
                AND name = #{name}
            </if>
           <if test="null != companyId">
                AND company_id = #{companyId}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="DepartmentMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                department
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="DepartmentMap">
        SELECT
            <include refid="columns" />
        FROM
            department 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                department
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO department (
                id,
                name,
                company_id
            ) VALUES (
                #{id},
                #{name},
                #{companyId}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO department (
                id,
                name,
                company_id
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.name},#{item.companyId})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                department
            <set>
                <if test="name != null">
                	<![CDATA[ name = #{name} ]]>,
                </if>
                <if test="companyId != null">
                	<![CDATA[ company_id = #{companyId} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                department
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                department
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                department
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

