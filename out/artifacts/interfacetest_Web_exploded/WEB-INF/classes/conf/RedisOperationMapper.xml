<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.bean.properties.redisProperties.dao.RedisOperationMapper">

    <resultMap id="RedisOperationMap" type="com.xn.autotest.bean.properties.redisProperties.entity.RedisOperation">
        <result property="id" column="id"/>
        <result property="redisName" column="redis_name"/>
        <result property="caseId" column="case_id"/>
        <result property="redisStatus" column="redis_status"/>
        <result property="type" column="type"/>
        <result property="operationOrder" column="operation_order"/>
        <result property="redisKey" column="redis_key"/>
        <result property="redisValue" column="redis_value"/>
        <result property="redisTime" column="redis_time"/>
        <result property="actionType" column="action_type"/>
        <result property="changeTime" column="change_time"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, redis_name, case_id, redis_status, type, operation_order, redis_key, redis_value, redis_time, action_type, change_time
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@isNotEmpty(redisName)">
                AND redis_name = #{redisName}
            </if>
           <if test="@isNotEmpty(caseId)">
                AND case_id = #{caseId}
            </if>
           <if test="@isNotEmpty(redisStatus)">
                AND redis_status = #{redisStatus}
            </if>
           <if test="@isNotEmpty(type)">
                AND type = #{type}
            </if>
           <if test="@isNotEmpty(operationOrder)">
                AND operation_order = #{operationOrder}
            </if>
           <if test="@isNotEmpty(redisKey)">
                AND redis_key = #{redisKey}
            </if>
           <if test="@isNotEmpty(redisValue)">
                AND redis_value = #{redisValue}
            </if>
           <if test="@isNotEmpty(redisTime)">
                AND redis_time = #{redisTime}
            </if>
           <if test="@isNotEmpty(actionType)">
                AND action_type = #{actionType}
            </if>
           <if test="@isNotEmpty(changeTimeBegin)">
                AND change_time >= #{changeTimeBegin}
           </if>
           <if test="@isNotEmpty(changeTimeEnd)">
                AND change_time &lt;= #{changeTimeEnd}
           </if>
        </where>
    </sql>
    
    <select id="get" resultMap="RedisOperationMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                redis_operation
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="RedisOperationMap">
        SELECT
            <include refid="columns" />
        FROM
            redis_operation 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                redis_operation
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO redis_operation (
                id,
                redis_name,
                case_id,
                redis_status,
                type,
                operation_order,
                redis_key,
                redis_value,
                redis_time,
                action_type,
                change_time
            ) VALUES (
                #{id},
                #{redisName},
                #{caseId},
                #{redisStatus},
                #{type},
                #{operationOrder},
                #{redisKey},
                #{redisValue},
                #{redisTime},
                #{actionType},
                #{changeTime}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO redis_operation (
                id,
                redis_name,
                case_id,
                redis_status,
                type,
                operation_order,
                redis_key,
                redis_value,
                redis_time,
                action_type,
                change_time
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.redisName},#{item.caseId},#{item.redisStatus},#{item.type},#{item.operationOrder},#{item.redisKey},#{item.redisValue},#{item.redisTime},#{item.actionType},#{item.changeTime})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                redis_operation
            <set>
                <if test="redisName != null">
                	<![CDATA[ redis_name = #{redisName} ]]>,
                </if>
                <if test="caseId != null">
                	<![CDATA[ case_id = #{caseId} ]]>,
                </if>
                <if test="redisStatus != null">
                	<![CDATA[ redis_status = #{redisStatus} ]]>,
                </if>
                <if test="type != null">
                	<![CDATA[ type = #{type} ]]>,
                </if>
                <if test="operationOrder != null">
                	<![CDATA[ operation_order = #{operationOrder} ]]>,
                </if>
                <if test="redisKey != null">
                	<![CDATA[ redis_key = #{redisKey} ]]>,
                </if>
                <if test="redisValue != null">
                	<![CDATA[ redis_value = #{redisValue} ]]>,
                </if>
                <if test="redisTime != null">
                	<![CDATA[ redis_time = #{redisTime} ]]>,
                </if>
                <if test="actionType != null">
                	<![CDATA[ action_type = #{actionType} ]]>,
                </if>
                <if test="changeTime != null">
                	<![CDATA[ change_time = #{changeTime} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                redis_operation
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                redis_operation
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                redis_operation
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

