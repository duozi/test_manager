<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xn.interfacetest.mapper">

    <resultMap id="TestCaseMap" type="com.xn.interfacetest.entity.TestCase">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="number" column="number"/>
        <result property="description" column="description"/>
        <result property="interfaceId" column="interface_id"/>
        <result property="type" column="type"/>
        <result property="createPerson" column="create_person"/>
        <result property="dataPrepare" column="data_prepare"/>
        <result property="dataClear" column="data_clear"/>
        <result property="paramsAssert" column="params_assert"/>
        <result property="databaseAssert" column="database_assert"/>
        <result property="redisAssert" column="redis_assert"/>
        <result property="customParamsHeader" column="custom_params_header"/>
        <result property="customParamsBody" column="custom_params_body"/>
        <result property="customParamsHeaderType" column="custom_params_header_type"/>
        <result property="customParamsBodyType" column="custom_params_body_type"/>
    </resultMap>

    <sql id="columns">
        <![CDATA[
        id, name, number, description, interface_id, type, create_person, data_prepare, data_clear, params_assert, database_assert, redis_assert, custom_params_header, custom_params_body, custom_params_header_type, custom_params_body_type
        ]]>
    </sql>

    <sql id="where">
        <where>
            <if test="@Ognl@isNotEmpty(id)">
                AND id = #{id}
            </if>
            <if test="@Ognl@isNotEmpty(name)">
                AND name = #{name}
            </if>
            <if test="@Ognl@isNotEmpty(number)">
                AND number = #{number}
            </if>
            <if test="@Ognl@isNotEmpty(description)">
                AND description = #{description}
            </if>
            <if test="@Ognl@isNotEmpty(interfaceId)">
                AND interface_id = #{interfaceId}
            </if>
            <if test="@Ognl@isNotEmpty(type)">
                AND type = #{type}
            </if>
            <if test="@Ognl@isNotEmpty(createPerson)">
                AND create_person = #{createPerson}
            </if>
            <if test="@Ognl@isNotEmpty(dataPrepare)">
                AND data_prepare = #{dataPrepare}
            </if>
            <if test="@Ognl@isNotEmpty(dataClear)">
                AND data_clear = #{dataClear}
            </if>
            <if test="@Ognl@isNotEmpty(paramsAssert)">
                AND params_assert = #{paramsAssert}
            </if>
            <if test="@Ognl@isNotEmpty(databaseAssert)">
                AND database_assert = #{databaseAssert}
            </if>
            <if test="@Ognl@isNotEmpty(redisAssert)">
                AND redis_assert = #{redisAssert}
            </if>
            <if test="@Ognl@isNotEmpty(customParamsHeader)">
                AND custom_params_header = #{customParamsHeader}
            </if>
            <if test="@Ognl@isNotEmpty(customParamsBody)">
                AND custom_params_body = #{customParamsBody}
            </if>
            <if test="@Ognl@isNotEmpty(customParamsHeaderType)">
                AND custom_params_header_type = #{customParamsHeaderType}
            </if>
            <if test="@Ognl@isNotEmpty(customParamsBodyType)">
                AND custom_params_body_type = #{customParamsBodyType}
            </if>
        </where>
    </sql>

    <select id="get" resultMap="TestCaseMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                test_case
            WHERE
                id = #{id}
        ]]>
    </select>

    <select id="list" resultMap="TestCaseMap">
        SELECT
        <include refid="columns" />
        FROM
        test_case
        <include refid="where"/>
    </select>

    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                test_case
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO test_case (
                id,
                name,
                number,
                description,
                interface_id,
                type,
                create_person,
                data_prepare,
                data_clear,
                params_assert,
                database_assert,
                redis_assert,
                custom_params_header,
                custom_params_body,
                custom_params_header_type,
                custom_params_body_type
            ) VALUES (
                #{id},
                #{name},
                #{number},
                #{description},
                #{interfaceId},
                #{type},
                #{createPerson},
                #{dataPrepare},
                #{dataClear},
                #{paramsAssert},
                #{databaseAssert},
                #{redisAssert},
                #{customParamsHeader},
                #{customParamsBody},
                #{customParamsHeaderType},
                #{customParamsBodyType}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO test_case (
                id,
                name,
                number,
                description,
                interface_id,
                type,
                create_person,
                data_prepare,
                data_clear,
                params_assert,
                database_assert,
                redis_assert,
                custom_params_header,
                custom_params_body,
                custom_params_header_type,
                custom_params_body_type
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.name},#{item.number},#{item.description},#{item.interfaceId},#{item.type},#{item.createPerson},#{item.dataPrepare},#{item.dataClear},#{item.paramsAssert},#{item.databaseAssert},#{item.redisAssert},#{item.customParamsHeader},#{item.customParamsBody},#{item.customParamsHeaderType},#{item.customParamsBodyType})
        </foreach>
    </insert>

    <update id="update">
        UPDATE
        test_case
        <set>
            <if test="name != null">
                <![CDATA[ name = #{name} ]]>,
            </if>
            <if test="number != null">
                <![CDATA[ number = #{number} ]]>,
            </if>
            <if test="description != null">
                <![CDATA[ description = #{description} ]]>,
            </if>
            <if test="interfaceId != null">
                <![CDATA[ interface_id = #{interfaceId} ]]>,
            </if>
            <if test="type != null">
                <![CDATA[ type = #{type} ]]>,
            </if>
            <if test="createPerson != null">
                <![CDATA[ create_person = #{createPerson} ]]>,
            </if>
            <if test="dataPrepare != null">
                <![CDATA[ data_prepare = #{dataPrepare} ]]>,
            </if>
            <if test="dataClear != null">
                <![CDATA[ data_clear = #{dataClear} ]]>,
            </if>
            <if test="paramsAssert != null">
                <![CDATA[ params_assert = #{paramsAssert} ]]>,
            </if>
            <if test="databaseAssert != null">
                <![CDATA[ database_assert = #{databaseAssert} ]]>,
            </if>
            <if test="redisAssert != null">
                <![CDATA[ redis_assert = #{redisAssert} ]]>,
            </if>
            <if test="customParamsHeader != null">
                <![CDATA[ custom_params_header = #{customParamsHeader} ]]>,
            </if>
            <if test="customParamsBody != null">
                <![CDATA[ custom_params_body = #{customParamsBody} ]]>,
            </if>
            <if test="customParamsHeaderType != null">
                <![CDATA[ custom_params_header_type = #{customParamsHeaderType} ]]>,
            </if>
            <if test="customParamsBodyType != null">
                <![CDATA[ custom_params_body_type = #{customParamsBodyType} ]]>
            </if>
        </set>
        WHERE
        id = #{id}
    </update>

    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                test_case
            WHERE
                id = #{id} 
        ]]>
    </delete>

    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                test_case
        ]]>
        <include refid="where"/>
    </delete>

    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                test_case
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

