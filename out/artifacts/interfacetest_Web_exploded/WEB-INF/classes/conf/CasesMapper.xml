<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.dao.CasesMapper">

    <resultMap id="CasesMap" type="com.xn.autotest.bean.request.cases.entity.Cases">
        <result property="id" column="id"/>
        <result property="methodId" column="method_id"/>
        <result property="caseName" column="case_name"/>
        <result property="caseStatus" column="case_status"/>
        <result property="param" column="param"/>
        <result property="changeTime" column="change_time"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, method_id, case_name, case_status, param, change_time
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="id != null and id != 0">
                AND id = #{id}
            </if>
           <if test="@isNotEmpty(methodId)">
                AND method_id = #{methodId}
            </if>
           <if test="@isNotEmpty(caseName)">
                AND case_name = #{caseName}
            </if>
           <if test="@isNotEmpty(caseStatus)">
                AND case_status = #{caseStatus}
            </if>
           <if test="@isNotEmpty(param)">
                AND param = #{param}
            </if>
           <if test="@isNotEmpty(changeTimeBegin)">
                AND change_time >= #{changeTimeBegin}
           </if>
           <if test="@isNotEmpty(changeTimeEnd)">
                AND change_time &lt;= #{changeTimeEnd}
           </if>
        </where>
    </sql>
    
    <select id="get" resultMap="CasesMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                cases
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="CasesMap">
        SELECT
            <include refid="columns" />
        FROM
            cases 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                cases
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO cases (
                id,
                method_id,
                case_name,
                case_status,
                param,
                change_time
            ) VALUES (
                #{id},
                #{methodId},
                #{caseName},
                #{caseStatus},
                #{param},
                #{changeTime}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO cases (
                id,
                method_id,
                case_name,
                case_status,
                param,
                change_time
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.methodId},#{item.caseName},#{item.caseStatus},#{item.param},#{item.changeTime})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                cases
            <set>
                <if test="methodId != null">
                	<![CDATA[ method_id = #{methodId} ]]>,
                </if>
                <if test="caseName != null">
                	<![CDATA[ case_name = #{caseName} ]]>,
                </if>
                <if test="caseStatus != null">
                	<![CDATA[ case_status = #{caseStatus} ]]>,
                </if>
                <if test="param != null">
                	<![CDATA[ param = #{param} ]]>,
                </if>
                <if test="changeTime != null">
                	<![CDATA[ change_time = #{changeTime} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                cases
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                cases
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                cases
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

