<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.xn.autotest.dao.HttpServicePropertiesMapper">

    <resultMap id="HttpServicePropertiesMap" type="com.xn.autotest.bean.properties.http.entity.HttpServiceProperties">
        <result property="id" column="id"/>
        <result property="interfaceId" column="interface_id"/>
        <result property="url" column="url"/>
        <result property="port" column="port"/>
        <result property="timeout" column="timeout"/>
        <result property="requestType" column="request_type"/>
        <result property="paramType" column="param_type"/>
        <result property="httpStatus" column="http_status"/>
        <result property="changeTime" column="change_time"/>
        <result property="interfaceName" column="interface_name"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        id, interface_id, url, port, timeout, request_type, param_type, http_status, change_time, interface_name
        ]]>
    </sql>
    
    <sql id="where">
        <where>
           <if test="@Ognl@isNotEmpty(id)">
                AND id = #{id}
            </if>
           <if test="@Ognl@isNotEmpty(interfaceId)">
                AND interface_id = #{interfaceId}
            </if>
           <if test="@Ognl@isNotEmpty(url)">
                AND url = #{url}
            </if>
           <if test="@Ognl@isNotEmpty(port)">
                AND port = #{port}
            </if>
           <if test="@Ognl@isNotEmpty(timeout)">
                AND timeout = #{timeout}
            </if>
           <if test="@Ognl@isNotEmpty(requestType)">
                AND request_type = #{requestType}
            </if>
           <if test="@Ognl@isNotEmpty(paramType)">
                AND param_type = #{paramType}
            </if>
           <if test="@Ognl@isNotEmpty(httpStatus)">
                AND http_status = #{httpStatus}
            </if>
           <if test="@Ognl@isNotEmpty(changeTimeBegin)">
                AND change_time >= #{changeTimeBegin}
           </if>
           <if test="@Ognl@isNotEmpty(changeTimeEnd)">
                AND change_time &lt;= #{changeTimeEnd}
           </if>
           <if test="@Ognl@isNotEmpty(interfaceName)">
                AND interface_name = #{interfaceName}
            </if>
        </where>
    </sql>
    
    <select id="get" resultMap="HttpServicePropertiesMap">
        SELECT <include refid="columns" />
        <![CDATA[
            FROM
                http_service_properties
            WHERE 
                id = #{id} 
        ]]>
    </select>
    
    <select id="list" resultMap="HttpServicePropertiesMap">
        SELECT
            <include refid="columns" />
        FROM
            http_service_properties 
        <include refid="where"/>
    </select>
        
    <select id="count" resultType="long">
        <![CDATA[
            SELECT
                count(1)
            FROM
                http_service_properties
        ]]>
        <include refid="where"/>
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
            INSERT INTO http_service_properties (
                id,
                interface_id,
                url,
                port,
                timeout,
                request_type,
                param_type,
                http_status,
                change_time,
                interface_name
            ) VALUES (
                #{id},
                #{interfaceId},
                #{url},
                #{port},
                #{timeout},
                #{requestType},
                #{paramType},
                #{httpStatus},
                #{changeTime},
                #{interfaceName}
            )
        ]]>
    </insert>

    <insert id="saveBatch">
        <![CDATA[
            INSERT INTO http_service_properties (
                id,
                interface_id,
                url,
                port,
                timeout,
                request_type,
                param_type,
                http_status,
                change_time,
                interface_name
            ) VALUES
        ]]>
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id},#{item.interfaceId},#{item.url},#{item.port},#{item.timeout},#{item.requestType},#{item.paramType},#{item.httpStatus},#{item.changeTime},#{item.interfaceName})
        </foreach>
    </insert>
    
    <update id="update">
        	UPDATE
                http_service_properties
            <set>
                <if test="interfaceId != null">
                	<![CDATA[ interface_id = #{interfaceId} ]]>,
                </if>
                <if test="url != null">
                	<![CDATA[ url = #{url} ]]>,
                </if>
                <if test="port != null">
                	<![CDATA[ port = #{port} ]]>,
                </if>
                <if test="timeout != null">
                	<![CDATA[ timeout = #{timeout} ]]>,
                </if>
                <if test="requestType != null">
                	<![CDATA[ request_type = #{requestType} ]]>,
                </if>
                <if test="paramType != null">
                	<![CDATA[ param_type = #{paramType} ]]>,
                </if>
                <if test="httpStatus != null">
                	<![CDATA[ http_status = #{httpStatus} ]]>,
                </if>
                <if test="changeTime != null">
                	<![CDATA[ change_time = #{changeTime} ]]>,
                </if>
                <if test="interfaceName != null">
                	<![CDATA[ interface_name = #{interfaceName} ]]>
                </if>
            </set>
            WHERE
                id = #{id} 
    </update>
    
    <delete id="deleteByPK">
        <![CDATA[
            DELETE
            FROM
                http_service_properties
            WHERE
                id = #{id} 
        ]]>
    </delete>
    
    <delete id="delete">
        <![CDATA[
            DELETE
            FROM
                http_service_properties
        ]]>
        <include refid="where"/>
    </delete>
    
    <delete id="deleteBatchByPK">
        <![CDATA[
            DELETE
            FROM
                http_service_properties
            WHERE
                id IN
        ]]>
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">#{ids}</foreach>
    </delete>
</mapper>

